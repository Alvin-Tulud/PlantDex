<%-include("navigator/header.ejs")%>

<!--container for plant grid items-->
<div class = "flex flex-grow items-center justify-around w-full">
    <div class="flex flex-col items-center justify-around w-full">
        <h1 class="text-4xl font-bold font-family-fraunces text-center mt-4 mb-2">Feed</h1>
        <div class="p-2 border-b-2 border-gray-700 w-full"></div>
        <div class="w-full flex flex-col md:flex-row lg:flex-row items-center justify-evenly p-2 gap-2">
            <div id="plantdisplay"class="overflow-y-auto h-[42rem] md:h-[38rem] lg:h-[38rem] p-4 grid grid-cols-1 content-evenly justify-center gap-4 font-family-dm-mono">
                <% if (plants && plants.length > 0) {%>
                    <% plants.forEach(function(plant) { %>

                        <!--REPLACE INSIDE LOGIC - copy from home.ejs-->

                        <div class=" w-[26rem] md:w-[50rem] lg:w-[50rem] bg-white rounded-lg shadow-md p-4 border border-gray-200 flex flex-row content-evenly justify-start">
                            <div class="mb-3 w-[13rem] md:w-[25rem] lg:w-[25rem]">
                                <img src="/uploads/<%= plant.image%>" alt="<%= plant.common_name %>" class="w-60 h-60 md:w-70 md:h-70 lg:w-70 lg:h-70 object-cover" onerror="this.onerror=null; this.src='/images/<%= plant.image%>'">
                                <h3 class="font-bold text-lg">Uploaded by <%= plant.username %></h3>
                                <p class="text-sm text-gray-500">Uploaded on <%= new Date(plant.addition_date).toLocaleDateString() %></p>
                            </div>
                            <div class="ml-4 w-[13rem] md:w-[25rem] lg:w-[25rem]">
                                <h2 class="text-xl font-medium mb-2"><%= plant.common_name %></h2>
                                <h2 class="text-lg font-regular mb-2"><%= plant.scientific_name %></h2>
                                <!--We haven't been saving descriptions, so maybe this could be left out?-->
                                <p class="text-sm text-gray-600"><%= plant.description %></p>
                                <p class="text-sm text-gray-500 mt-2">Edible: <%= plant.edible %></p>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="">
                        <h1 class="text-4xl font-bold text-center mt-8 mb-4">No User Posts Found</h1>
                        <p class="text-center text-gray-600">No user posts available.</p>
                    </div>
                <% } %>
            </div>
            <div class="w-[26rem] md:w-[45rem] lg:w-[45rem] gap-4 bg-white rounded-lg shadow-md p-4 border border-gray-200 font-family-dm-mono">
                <h1>Plant Distribution Heatmap</h1>
                <div class="plant-controls" style="margin-bottom:1rem;">
                <input
                    type="text"
                    id="plantInput"
                    placeholder="Enter plant name (e.g. Eucalyptus)"
                    class="w-80 border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring-2 focus:ring-gray-500"
                />
                <!--<button id="plantSearchBtn">Search</button> #This shit breaks for some reason-->
                <button type="button" id="plantSearchBtn" class="border border-gray-300 rounded-lg p-2">Search</button>

                </div>
                <div id="map"></div>
            </div>
        </div>
    </div>
</div>

<%-include("navigator/footer.ejs")%>