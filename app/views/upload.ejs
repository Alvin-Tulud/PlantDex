<%-include("navigator/header.ejs")%>
<div class="flex flex-grow content-center justify-center p-2 gap-4">
    <div class="bg-white rounded-lg shadow-2xl p-8 max-w-md">
        <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Upload Photos</h1>
        
        <form action="/upload" method="POST" enctype="multipart/form-data" class="space-y-6">
            <div class="border-2 border-dashed border-green-400 rounded-lg p-8 text-center hover:border-green-600 transition cursor-pointer" onclick="document.getElementById('image').click()">
                <svg class="w-12 h-12 mx-auto text-green-500 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                <p class="text-gray-600 font-medium mb-1">Click to upload or drag and drop</p>
                <p class="text-gray-400 text-sm">PNG, JPG (max 10MB)</p>
            </div>
            
            <input 
                type="file" 
                id="image" 
                name="image" 
                accept="image/png, image/jpeg, image/PNG, image/JPEG"
                multiple 
                class="hidden" 
                required
            />
            
            <button 
                type="submit" 
                class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-4 rounded-lg transition duration-200"
            >
                Submit
            </button>
        </form>
    </div>
    <div class="ml-8 bg-white rounded-lg shadow-2xl p-8 max-w-4xl">
        <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Preview</h2>
        <div id="preview-container" class=" w-60 h-60 flex items-center justify-center bg-gray-100 rounded-lg p-4">
            <p class="text-gray-400">No image selected</p>
        </div>
    </div>

    <script>
        document.getElementById('image').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    const container = document.getElementById('preview-container');
                    container.innerHTML = `<img src="${event.target.result}" class="w-60 h-60 object-cover rounded-lg" />`;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
</div>
<%-include("navigator/footer.ejs")%>